<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/newregno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17255A"
        android:ems="15"
        android:hint="@string/registration_number"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#17255A"
        android:textColorHint="#17255A"
        app:layout_constraintBottom_toTopOf="@id/newpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17255A"
        android:ems="15"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#17255A"
        android:textColorHint="#17255A"
        app:layout_constraintBottom_toTopOf="@id/newsub1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newregno"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/newsub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17255A"
        android:ems="15"
        android:hint="Subject 1"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#17255A"
        android:textColorHint="#17255A"
        app:layout_constraintBottom_toTopOf="@id/newsub2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newpassword"
        android:importantForAutofill="no"
        />

    <EditText
        android:id="@+id/newsub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17255A"
        android:ems="15"
        android:hint="Subject 2"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#17255A"
        android:textColorHint="#17255A"
        app:layout_constraintBottom_toTopOf="@id/newsub3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsub1"
        android:importantForAutofill="no"
        />

    <EditText
        android:id="@+id/newsub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#17255A"
        android:ems="15"
        android:hint="Subject 3"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="#17255A"
        android:textColorHint="#17255A"
        app:layout_constraintBottom_toTopOf="@id/finalregbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsub2"
        android:importantForAutofill="no"
        />

    <Button
        android:id="@+id/finalregbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newsub3" />
</androidx.constraintlayout.widget.ConstraintLayout>